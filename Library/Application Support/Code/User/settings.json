{
    // VSCode settings
    "editor.minimap.enabled": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Gruvbox Dark Hard",

    //**********************
    //* Extension settings *
    //**********************
    // Vim settings
    "vim.useSystemClipboard": true, // Use system clipboard
    "vim.hlsearch": true, // Highlight all matches
    "vim.visualstar": true, // Search with `*` and `#`
    "vim.insertModeKeyBindings": [
        // Bind `<ESC>` to `jj`
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<ESC>"
            ],
        },
        // Bind `<ESC>` and execute vim command `:w` to `jjw`
        {
            "before": [
                "j",
                "j",
                "w"
            ],
            "after": [
                "<ESC>"
            ],
            "commands": [
                ":w"
            ],
        },
        // Bind `<ESC>` and execute vim command `:wq` to `jjq`
        {
            "before": [
                "j",
                "j",
                "q"
            ],
            "after": [
                "<ESC>"
            ],
            "commands": [
                ":wq"
            ],
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // Bind `gj` to `j`
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ],
        },
        // Bind `gk` to `k`
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ],
        },
        // Bind `ZZ` to the vim command `:wq`
        {
            "before": [
                "Z",
                "Z"
            ],
            "after": [
                ":wq"
            ],
        },
        { // Bind `Ctrl + n` to the vim command `:nohl`
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ],
        }
    ],

    // Remote SSH
    "remote.SSH.showLoginTerminal": false,

    // Latex Workshop
    "latex-workshop.latex.tools": [
        {
            "name": "Step 1: ptex2pdf",
            "command": "ptex2pdf",
            "args": [
                "-l",
                "-ot",
                "-kanji=utf8 -synctex=1",
                "%DOCFILE%.tex"
            ]
        },
        {
            "name": "Step 2: pbibtex",
            "command": "pbibtex",
            "args": [
                "%DOCFILE%",
                "-kanji=utf8"
            ]
        },
        {
            "name": "Step 3: ptex2pdf",
            "command": "ptex2pdf",
            "args": [
                "-l",
                "-ot",
                "-kanji=utf8 -synctex=1",
                "%DOCFILE%.tex"
            ]
        },
        {
            "name": "Step 4: ptex2pdf",
            "command": "ptex2pdf",
            "args": [
                "-l",
                "-ot",
                "-kanji=utf8 -synctex=1",
                "%DOCFILE%.tex"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "ptex2pdf",
            "tools": [
                "Step 1: ptex2pdf"
            ]
        },
        {
            "name": "toolchain",
            "tools": [
                "Step 1: ptex2pdf",
                "Step 2: pbibtex",
                "Step 3: ptex2pdf",
                "Step 4: ptex2pdf"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "editor.renderControlCharacters": true,
    "latex-workshop.latex.clean.enabled": true,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.dvi",
        "*.synctex.gz"
    ],
    "latex-workshop.latex.autoClean.run": "onBuilt"
}