{
    //******************
    // VSCode settings
    //******************
    "editor.minimap.enabled": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    // Tabs
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.showTabs": false,

    //**********************
    // Extension settings
    //**********************
    // Vim settings
    "vim.useSystemClipboard": true, // Use system clipboard
    "vim.useCtrlKeys": true,  // Enable Vim ctrl keys overriding common VS Code operations
    "vim.hlsearch": true, // Highlight all matches
    "vim.visualstar": true, // Search with `*` and `#`
    "vim.leader": "<space>",  // Set <space> to leader
    "vim.insertModeKeyBindings": [
        // Bind `<ESC>` to `jj`
        {
            "before": ["j", "j"],
            "after": ["<ESC>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // Bind `gj` to `j`
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        // Bind `gk` to `k`
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        // Bind `ZZ` to the vim command `:wq`
        {
            "before": ["Z", "Z"],
            "commands": [":wq"]
        },
        // Bind `Ctrl + n` to the vim command `:nohl`
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
        // Bind `<leader>:` to show the command palette
        {
            "before": ["leader", ":"],
            "commands": [
                "workbench.action.showCommands",
            ]
        },
        // Bind `<leader>w` to save the current file
        {
            "before": ["leader", "w"],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        // Bind `<leader>q` to close active editor
        {
            "before": ["leader", "q"],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        // Bind `<C-w>s` to split editor
        {
            "before": ["<C-w>", "s"],
            "commands": [
                "workbench.action.splitEditor"
            ]
        },
        // Bind `<C-h>` to move right editor
        {
            "before": ["<C-h>"],
            "after": ["<C-w>", "h"]
        },
        // Bind `<C-l>` to move left editor
        {
            "before": ["<C-l>"],
            "after": ["<C-w>", "l"]
        },
        // Bind `Ctrl+b` to open recent file
        {
            "before": ["<C-b>"],
            "commands": ["workbench.action.quickOpen"]
        },
        // Bind `Ctrl+f` to open file viewer
        {
            "before": ["<C-f>"],
            "commands": ["workbench.view.explorer"]
        },
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-k>": false,
    },
    // Remote SSH
    "remote.SSH.showLoginTerminal": false,
    "remote.SSH.remotePlatform": {
        "cybershield": "linux"
    }
}